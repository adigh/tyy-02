<?xml version="1.0" encoding="utf-8" ?>
<config>
    <tabs>
        <contacter translate="label" module="contacter">
            <label>Contacter</label>
            <sort_order>999</sort_order>
        </contacter>
    </tabs>
    <sections>
        <contacterconfiguration translate="label" module="contacter">
            <label>Configuration</label>
            <tab>contacter</tab>
            <frontend_type>text</frontend_type>
            <sort_order>10</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <general translate="label" module="contacter">
                    <label>General options</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>                        
                        <listallproduct translate="label comment" module="contacter">
                            <label>Display all product in make offer list?</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
							<comment>If no,only product with attribute "make offer" set to "Yes" will be display.</comment>
                        </listallproduct>
                        <email translate="label" module="contacter">
                            <label>Email to reveive custoemr's offer</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </email>			
						<email_template translate="label" module="contacter">
                            <label>Email template</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_email_template</source_model>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </email_template>		
                    </fields>
                </general>
            </groups>
        </contacterconfiguration>       
    </sections>
</config>